<table class="table table-responsive">
	<thead>
		<tr>
			<th>No.</th>
			<th>WalletUserName</th>
			<th>FullName</th>
			<th>MobileNo</th>
			<th>Balance</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody id="tbDataTable">
	</tbody>
</table>

@section scripts {
	<script>
		alert("This is Wallet User List Page");
		loadData();
		function loadData(){
			$.ajax({
				url:"/Wallet/Index",
				type:"POST",
				success:function(response){
					let count = 0;
					for(let i=0; i < response.data.length; i++){
						// console.log(response.data[i]);
						let item = response.data[i];
						let row = `<tr>
				<td>${++count}</td>
				<td>${item.WalletUserName}</td>
				<td>${item.FullName}</td>
				<td>${item.MobileNo}</td>
				<td>${item.Balance}</td>
				<td>
				<a href="Wallet/Edit/${item.WalletId}" class="btn btn-outline-warning">Edit</a>
				<a href="Wallet/Delete/${item.WalletId}" class="btn btn-outline-danger">Delete</a>
				</td>
			</tr>`;

			$("#tbDataTable").append(row);
					}
				},
				error:function(request,status,alert)
				{
				  alert(request.responseText);
				}
			});
		}
	</script>
}

