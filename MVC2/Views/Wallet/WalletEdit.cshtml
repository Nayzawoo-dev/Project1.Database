<h1>Edit Your Wallet Account</h1>
    <div class="mb-3">
        <label for="walletUsername" class="form-label">Wallet Username</label>
        <input type="text" name="WalletUserName" class="form-control" id="txtwalletUsername">
    </div>
    <div class="mb-3">
        <label for="fullName" class="form-label">Full Name</label>
        <input type="text" name="FullName" class="form-control" id="txtfullName">
    </div>
    <div class="mb-3">
        <label for="mobileNo" class="form-label">Mobile No</label>
        <input type="tel" name="MobileNo" class="form-control" id="txtmobileNo" readonly>
    </div>
    <div class="mb-3">
        <label for="balance" class="form-label">Balance</label>
        <input type="number" name="Balance" class="form-control" id="txtbalance" readonly>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn-update btn btn-primary me-2">Update</button>
        <a href="/Wallet/Index" class="btn btn-secondary">Cancel</a>
    </div>
@section scripts{
    <script>
        $(document).ready(function(){
            var item = JSON.parse(localStorage.getItem("EditInfo"));
            $("#txtwalletUsername").val(item.WalletUserName);
            $("#txtfullName").val(item.FullName);
            $("#txtmobileNo").val(item.MobileNo);
            $("#txtbalance").val(item.Balance);
            const id = item.WalletId;
            $(".btn-update").click(function(){
             const item = {
                 WalletId : id,
                 WalletUserName : $("#txtwalletUsername").val(),
                 FullName : $("#txtfullName").val(),
                 MobileNo : $("txtmobileNo").val(),
                 Balance : $("txtbalance").val()
             }
             $.ajax({
                 url:"/Wallet/Update",
                 type:"POST",
                 data:{requestmodel:item},
                 success:function(response){
                   if(!response.isSuccess){
                       alert(response.message);
                       return;
                   }
                   alert(response.message);
                   window.location.href = "/Wallet/Index";
                   localStorage.removeItem("EditInfo");
                 }
             })
            });
        });
    </script>
}