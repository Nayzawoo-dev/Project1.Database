@{
    ViewData["Title"] = "Register Wallet";
}
<h1>Register Your Wallet Account</h1>
<form method="post" action="/Wallet/Create">
    <div class="mb-3">
        <label for="walletUsername" class="form-label">Wallet Username</label>
        <input type="text" name="WalletUserName" class="form-control" id="txtwalletUsername">
    </div>
    <div class="mb-3">
        <label for="fullName" class="form-label">Full Name</label>
        <input type="text" name="FullName" class="form-control" id="txtfullName">
    </div>
    <div class="mb-3">
        <label for="mobileNo" class="form-label">Mobile No</label>
        <input type="tel" name="MobileNo" class="form-control" id="txtmobileNo">
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary me-2">Save</button>
        <a href="/Wallet" class="btn btn-secondary">Cancel</a>
    </div>
</form>
