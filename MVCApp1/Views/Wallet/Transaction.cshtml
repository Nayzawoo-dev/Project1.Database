<h1>Transaction Your Wallet Account</h1>
<form method="post" action="/Wallet/Transaction">
    <div class="mb-3">
        <label for="mobileNo" class="form-label">Transfer Mobile No</label>
        <input type="tel" name="FromMobileNo" class="form-control" id="txtmobileNo">
    </div>
    <div class="mb-3">
        <label for="mobileNo" class="form-label">Received Mobile No</label>
        <input type="tel" name="ToMobileNo" class="form-control" id="txtmobileNo">
    </div>
    <div class="mb-3">
        <label for="balance" class="form-label">Transaction Amount</label>
        <input type="number" name="Amount" class="form-control" id="txtbalance">
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary me-2">Transaction</button>
        <a href="/Wallet/Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
