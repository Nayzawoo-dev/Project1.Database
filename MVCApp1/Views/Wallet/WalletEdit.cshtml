@model WalletModel
<h1>Edit Your Wallet Account</h1>
<form method="post" action="/Wallet/Update/@Model.WalletId">
    <div class="mb-3">
        <label for="walletUsername" class="form-label">Wallet Username</label>
        <input type="text" name="WalletUserName" value="@Model.WalletUserName" class="form-control" id="txtwalletUsername">
    </div>
    <div class="mb-3">
        <label for="fullName" class="form-label">Full Name</label>
        <input type="text" name="FullName" value="@Model.FullName" class="form-control" id="txtfullName">
    </div>
    <div class="mb-3">
        <label for="mobileNo" class="form-label">Mobile No</label>
        <input type="tel" name="MobileNo" value="@Model.MobileNo" class="form-control" id="txtmobileNo" readonly>
    </div>
    <div class="mb-3">
        <label for="balance" class="form-label">Balance</label>
        <input type="number" name="Balance" value="@Model.Balance" class="form-control" id="txtbalance" readonly>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary me-2">Update</button>
        <a href="/Wallet" class="btn btn-secondary">Cancel</a>
    </div>
</form>

