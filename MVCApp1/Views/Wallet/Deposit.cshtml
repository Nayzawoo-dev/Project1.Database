<h1>Deposit Your Wallet Account</h1>
<form method="post" action="/Wallet/Deposit">
    <div class="mb-3">
        <label for="mobileNo" class="form-label">Mobile No</label>
        <input type="tel" name="MobileNo" class="form-control" id="txtmobileNo">
    </div>
    <div class="mb-3">
        <label for="balance" class="form-label">Deposit Amount</label>
        <input type="number" name="Amount" class="form-control" id="txtbalance">
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary me-2">Deposit</button>
        <a href="/Wallet/Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>