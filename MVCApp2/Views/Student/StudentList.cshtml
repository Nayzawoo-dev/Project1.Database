@model List<StudentModel>
@{
    bool isSuccess = Convert.ToBoolean(TempData["isSuccess"] ?? false);
    string message = Convert.ToString(TempData["message"] ?? string.Empty);
}
@if (!string.IsNullOrEmpty(message))
{
    <div id="alert" class="alert alert-@(isSuccess ? "success" : "danger")" role="alert">
        @message
    </div>
}
<h1>University Student List</h1>
<form class="d-flex" method="post" action="/Student/Search">
    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="keyword" id="keyword">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>
<div class=" mt-3 ">
@foreach(var item in Model)
{
        <div class="card d-inline-block mt-2" style="width: 18rem;">
            <img src="~/University.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Roll No : @item.RollNo</h5>
                <p class="card-text">Name : @item.Name</p>
                <a href="Student/Edit/@item.StudentId" class="btn btn-primary">Edit</a>
            </div>
        </div>
}
</div>
<a href="/Student/Create" class="btn btn-success mt-3">Add New Student</a>
